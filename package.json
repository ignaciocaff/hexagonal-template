{
  "name": "hexagonal-express-template",
  "version": "1.0.0",
  "description": "Template para nuevos proyectos con typescript y express.",
  "main": "src/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/main.ts",
    "test:tdd": "jest --watch",
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=test jest",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "build": "npm run build:clean && npm run build:tsc",
    "build:clean": "rimraf dist; exit 0",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "start": "node dist/src/main.js",
    "validate-dependencies": "depcruise --config .dependency-cruiser.js src",
    "format": "prettier --write .",
    "postinstall": "husky install"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.1",
    "@commitlint/config-conventional": "17.6.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.15",
    "@types/jest": "29.2.5",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "dependency-cruiser": "12.11.1",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "husky": "8.0.3",
    "jest": "29.3.1",
    "lint-staged": "13.1.0",
    "prettier": "2.8.3",
    "rimraf": "4.0.4",
    "ts-jest": "29.0.5",
    "ts-node-dev": "2.0.0",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "1.20.2",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "http-status-codes": "^2.2.0",
    "mongo-connect-provider": "1.3.1",
    "pino": "8.11.0",
    "pino-pretty": "10.0.0",
    "session-manager-express": "1.3.11"
  }
}